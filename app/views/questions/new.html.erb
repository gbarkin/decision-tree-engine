<h1>New Question for <%= @workflow.name %></h1>

<%= form_with model: [@workflow, @question], local: true do |f| %>
  <div>
    <%= f.label :text %><br>
    <%= f.text_field :text %>
  </div>

  <div>
    <%= f.label :position %><br>
    <%= f.number_field :position %>
  </div>

  <div>
    <%= f.submit "Create Question" %>
  </div>
<% end %>

<p>
  <%= link_to "Back", workflow_path(@workflow) %>
</p>
